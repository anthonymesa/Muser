// Creates a dynamically generated 10 x 10 unsigned char array

class Something
{
    private:

        // Creates a pointer to an array of pointers
        unsigned char** data;

    public:

        // Constructor
        Something(){

            // Sets the value of pointer "data" to an array of 10 pointers of char value
            *data = new unsigned char*[10];

            // Iterate through the array of 10 pointers within "data" and set each of the pointers to a new array
            for (int i = 0; i < 10; i++){
                *(data + i) = new unsigned char[10];
            }

            // Sets count to 0
            unsigned char count = 0;

            // starting at the first row, fill the first element with 0, then 1, 2, 3, so on and so forth across the 2D array
            for (int i = 0; i < 10; i++){
                for (int j = 0; j < 10; j++){

                    // The unsigned char at array index j pointed to by the dereferenced value of the pointer "data" plus the y increment 
                    // (which gives us the memory address of that corresponding element of the array) equals the unsigned char "count"
                    *((*data) + i)[j] = count;
                    count ++;
                }
            }
        }
}
